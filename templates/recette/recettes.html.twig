{% extends 'base.html.twig' %}

{% block title %}Recettes EASY{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div style="display: flex;">
        {% for recette in listRecette %}
       
            <a href="{{ path('recetteById', {'id': recette.idrecette}) }}">
                <div class="card mb-3" style="width: 200px;margin-right: 20px;">
                
                    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="background-size: 100%;background-image: url('{{ recette.images | first}}');font-size:1.125rem;text-anchor:middle">
                        <text x="50%" y="50%" fill="black" dy=".3em" style="font-weight: bold;text-shadow: white 1px 1px 5px;"> {{recette.recette}}</text>
                    </svg>
                    
                </div>
            </a>
        {% endfor %}
        
        
    </div>

</div>
{% endblock %}
